{# home.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>{% block title %}Inicio{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  {% include 'partials/header.html.twig' %}
    <div class="container py-5">
        <h1 class="text-center mb-4">Pok√©dex</h1>
        
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            {% for pokemon in pokemons %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="public/{{ pokemon.ImagePath }}" class="card-img-top p-3" alt="{{ pokemon.Name }}" style="height: 200px; object-fit: contain;">
                        <div class="card-body">
                            <h5 class="card-title text-capitalize">{{ pokemon.Number ~ '# ' ~ pokemon.Name }}</h5>
                            <div class="d-flex gap-2">
                                {# Ahora 'pokemon.tipos' es un array, no un string #}
                                {% for tipo in pokemon.tipos %}
                                    <span class="badge rounded-pill {{ typeColors[tipo]|default('bg-secondary') }}">
                                        {{ tipo }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
<style>
    .badge {
        font-size: 0.85em;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        transition: transform 0.2s;
    }
    
    .badge:hover {
        transform: scale(1.05);
        cursor: default;
    }

    /* Colores personalizados */
    .bg-violet { background: linear-gradient(145deg, #8A2BE2, #6A1B9A); }
    .bg-purple { background: linear-gradient(145deg, #9C27B0, #6A1B9A); }
    .bg-indigo { background: linear-gradient(145deg, #3F51B5, #283593); }
    .bg-pink { background: linear-gradient(145deg, #E91E63, #AD1457); }
    .bg-orange { background: linear-gradient(145deg, #FF9800, #EF6C00); }
    .bg-sky { background: linear-gradient(145deg, #00BCD4, #00838F); }
    .bg-brown { background: linear-gradient(145deg, #795548, #5D4037); }
    .bg-stone { background: linear-gradient(145deg, #607D8B, #455A64); }
    .bg-lime { background: linear-gradient(145deg, #CDDC39, #9E9D24); }
    .bg-deep-purple { background: linear-gradient(145deg, #673AB7, #4527A0); }
</style>
</html>
